@model BugTrackerWeb.Models.Bug

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Severity" class="control-label"></label>
                <select asp-for="Severity" class ="form-control" asp-items="@Html.GetEnumSelectList<Bug.SeverityTypes>()">
                    
                </select>
            </div>
            <br />
            @Html.Hidden("ProjectId", ViewData["ProjectId"])

            <button type="submit" id="create" class="btn btn-success" style="width:150px">Create</button>
            @{
                int ModelId = (int)ViewData["ProjectId"];
            }
            <a asp-controller="ProjectList" asp-action="Project" asp-route-id="@ModelId" class="btn btn-primary"> 
                Back to List
            </a>
            <script type = "text/javascript">
                function DisableButton() {
                    document.getElementById("create").disabled = true;
                }
                window.onbeforeunload = DisableButton;
            </script>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
