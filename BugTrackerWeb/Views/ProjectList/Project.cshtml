@model Project

@{
    ViewData["Title"] = "Info";
}

<div class="container-fluid container-lg pt-5 pb-4">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Project: @Model?.Title</h2>
        </div>   
    </div>
   
    <div class="row pt-4 g-4">
        <div class="col-6">
            <h4 class="mb-3 text-primary">Work In Progress</h4>
        </div>
        <div class="col-6 text-end">
            <div class="d-flex flex-row-reverse align-items-center mb-3 text-end">
                <a asp-controller="Bug" asp-action="Create" asp-route-ProjectId="@Model.Id" 
                class="btn btn-primary d-flex flex-nowrap align-center align-items-center w-20 justify-content-end rounded-pill">
                    <span class="fs-4 lh-1">+</span>
                    <span class="ps-2">New Bug</span>
                </a>
            </div>
        </div>
    </div>
    <div class="card card-flat border rounded-3 justify-content-center">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-hover border-top">
                    <tbody>
                    
                            @foreach(var obj in Model.Bugs)
                            {
                            <tr>
                                @if(@obj.Severity == Bug.SeverityTypes.Low) {
                                    <td width="10%" class="align-middle"><span class="badge bg-light">Low</span></td>
                                } else if(@obj.Severity == Bug.SeverityTypes.Moderate) {
                                    <td width="10%" class="align-middle"><span class="badge bg-moderate">Moderate</span></td>
                                } else if(@obj.Severity == Bug.SeverityTypes.Major) {
                                    <td width="10%" class="align-middle"><span class="badge bg-warning">Major</span></td>
                                } else {
                                    <td width="10%" class="align-middle"><span class="badge bg-danger">Critical</span></td> 
                                }
                                <td width="15%" class="align-middle">@obj.Name</td>
                                <td width="15%" class="align-middle">
                                    @obj.CreatedDate.ToString("MM/dd/yyyy")
                                </td>
                                <td width="15%" class="align-middle">
                                    @obj.UpdateDate
                                </td>
                                <td width="15%" class="align-middle">
                                    <form asp-controller="Bug" id="@obj.Id" method="post" asp-action="Delete" asp-route-id="@obj.Id"></form>
                                    <a asp-controller="Bug" asp-action="Details" asp-route-id="@obj.Id" 
                                    class="btn btn-info btn-sm align-items-center text-center">Details</a>
                                    <a asp-controller="Bug" asp-action="Edit" asp-route-id="@obj.Id"
                                    class="btn btn-primary btn-sm align-items-center text-center"> <i class="bi bi-gear-fill"></i></a>
                                    <button form="@obj.Id" type="submit" class="btn btn-danger btn-sm align-items-center text-center" data-bs-toggle="tooltip" 
                                    data-bs-placement="top" title="Delete Bug"> <i class="bi bi-x-circle"></i></button>
                                    
                                </td>
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
