
@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Project List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Project" asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-folder-plus"></i> &nbsp; New Project
            </a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Creation Date
            </th>
            <th>
                Latest Update Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Title
                </td>
                <td width="30%">
                    @obj.CreatedDate
                </td>
                <td width="30%">
                    @obj.UpdateDate
                </td>
                <td width="20%" style="text-align:center">
                    <form id="deleteForm" method="post" asp-action="Delete" asp-route-id="@obj.Id"></form>
                    <div class="btn-group" role="group">                        
                        <a asp-controller="Project" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary"> <i class="bi bi-gear-fill"></i></a>
                        <button form="deleteForm" type="submit" class="btn btn btn-outline-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete Project"> <i class="bi bi-folder-x"></i></button>
                    </div>
                </td>
            </tr>
        }
    </tbody>

    
</table>
</div>
